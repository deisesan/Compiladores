/* Numbers */

TOKEN : {
	<HEX_DIGIT_SEQUENCE: (<"+" | "-">)? "$" (["0"-"9"] | ["A"-"F"] | ["a"-"f"])+>
| <OCTAL_DIGIT_SEQUENCE: (<"+" | "-">)? "&" (["0"-"7"])+ >
| <BIN_DIGIT_SEQUENCE: (<"+" | "-">)? "%" (["0","1"])+ >
| <DIGIT_SEQUENCE: ["0"-"9"] (["0"-"9"])* >
| <UNSIGNED_INTEGER: <DIGIT_SEQUENCE> | <HEX_DIGIT_SEQUENCE> | <OCTAL_DIGIT_SEQUENCE> | <BIN_DIGIT_SEQUENCE>>
| <SIGN: "+" | "-">
| <UNSIGNED_REAL: (<"+" | "-">)? (["0"-"9"] (["0"-"9"])*)+ "." (["0"-"9"] (["0"-"9"])*)* (("E" | "e") (<"+" | "-">)? (["0"-"9"])+)? >
| <SCALE_FACTOR: ("E" | "e") (<"+" | "-">)? (["0"-"9"])+ >
| <UNSIGNED_NUMBER:  <UNSIGNED_INTEGER> | <UNSIGNED_REAL> >
| <SIGNED_NUMBER:  (<"+" | "-">)? <UNSIGNED_NUMBER>>
}

/* Labels */

TOKEN: {
  <LABEL: <DIGIT_SEQUENCE> | <IDENTIFIER>>
}

/* Character Strings */

TOKEN: {
	<CHARACTER_STRING: (<QUOTED_STRING> | <CONTROL_STRING>)+>
| <QUOTED_STRING: "'" ([" " - "&", "(" - "~"])* "'">
| <STRING_CHARACTER: [" " - "&", "(" - "~"]>
| <CONTROL_STRING: "#" <DIGIT_SEQUENCE> | <HEX_DIGIT_SEQUENCE> | <OCTAL_DIGIT_SEQUENCE> | <BIN_DIGIT_SEQUENCE>>
}



